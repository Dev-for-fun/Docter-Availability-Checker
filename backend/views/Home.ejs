<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Add Blog</title>
</head>
<body>
    <div class="container mt-4">

        <form action="/doctor-availability" method="get" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="date" class="form-label">Date</label>
                <input name = "date" type="text" class="form-control" placeholder="Enter the date in the format of YYYY-MM-DD only">
            </div>
            <div class="mb-3">
                <label for="time" class="form-label">Time</label>
                <input name = "time" type="text" class="form-control" placeholder="Enter the time in the format of HH:MM only. Please dont forget leading/trailing 0s">
            </div>
            <button type="submit" class="btn btn-primary" onsubmit="">Submit</button>
        </form>
    </div>
    
    <div class="container mt-4">
        <% if (locals.respData) { %>
            <div>
                <h3>Availability: <%= respData.isAvailable %></h3> 
                <% if (respData.nextAvailableSlot) { %>
                    <h3>nextAvailableSlot: </h3>
                    <h5>time: <%= respData.nextAvailableSlot.time%></h5>
                    <h5>date: <%= respData.nextAvailableSlot.date%></h5>
                <% } %>
            </div>
        <% } %>
    
    </div>
    
    
    <%- include('./partials/script') %>
</body>
</html>